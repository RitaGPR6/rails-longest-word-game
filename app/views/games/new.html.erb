<div class="w-100">
<h1 class="text-center">New Game</h1>
<div class="d-flex flex-row justify-content-center">
<% @letters.each do |letter| %>
  <p class="border p-4 m-3 bg-primary bg-gradient text-white box-shadow-2"><%= letter %></p>
  <% end %>
</div>
</div>

<form class="form-inline mt-3" action='/score' method='POST' data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="form-group mx-sm-3 mb-2">
    <div class= "m-3">
     <label for="inputWord" class="sr-only">What is the longest word you can find?</label>
      <div class="d-flex">
        <input type="text" name = "word" class="form-control flex-grow-1" id="inputWord">
        <button type="submit" class="btn btn-primary m-1">Play</button>
      </div>
    </div>
    </div>
</form>
